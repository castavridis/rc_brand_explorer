{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rc-brand-explorer.local/schemas/brands-v1.json",
  "title": "Brand Logo Browser Data Schema",
  "description": "JSON Schema for validating brand metadata in brands.json",
  "type": "object",
  "required": ["version", "lastUpdated", "brands"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the schema (e.g., 1.0.0)"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last data modification"
    },
    "brands": {
      "type": "array",
      "description": "Array of brand objects",
      "items": {
        "$ref": "#/definitions/brand"
      },
      "minItems": 0
    }
  },
  "definitions": {
    "brand": {
      "type": "object",
      "required": ["id", "name", "slug", "category", "logoPath", "dateAdded"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]{1,100}$",
          "description": "Unique identifier (lowercase alphanumeric + hyphens)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Display name of the brand"
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 1,
          "maxLength": 100,
          "description": "URL-safe identifier matching logo filename"
        },
        "category": {
          "type": "string",
          "enum": [
            "Technology",
            "Apparel & Fashion",
            "Food & Beverage",
            "Automotive",
            "Finance & Banking",
            "Healthcare",
            "Media & Entertainment",
            "Retail",
            "Sports & Fitness",
            "Other"
          ],
          "description": "Industry/type classification"
        },
        "logoPath": {
          "type": "string",
          "pattern": "^assets/logos/[a-z0-9-]+\\.(svg|png|jpg|jpeg|webp)$",
          "description": "Relative path to logo file in assets/logos/"
        },
        "websiteUrl": {
          "type": ["string", "null"],
          "format": "uri",
          "pattern": "^https?://",
          "description": "Official brand website URL (optional)"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Brief brand description (optional)"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "maxItems": 10,
          "uniqueItems": true,
          "description": "Searchable keywords (max 10, unique)"
        },
        "dateAdded": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when brand was added"
        },
        "featured": {
          "type": "boolean",
          "default": false,
          "description": "Featured/spotlight brand flag"
        }
      },
      "additionalProperties": false
    }
  }
}
